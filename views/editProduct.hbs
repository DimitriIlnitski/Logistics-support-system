					id="price"
					type="number"
					class="validate"
					autocomplete="off"
				/>
				<label class="active" for="price">Price</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s10">
				<input
					value="{{this.incoterms}}"
					name="incoterms"
					id="incoterms"
					type="text"
					class="validate"
					autocomplete="off"
				/>
				<label class="active" for="incoterms">Incoterms</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s10">
				<input
					value="{{this.paymentDelay}}"
					name="paymentDelay"
					id="paymentDelay"
					type="number"
					class="validate"
					autocomplete="off"
				/>
				<label class="active" for="paymentDelay">Payment delay</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s10">
				<input
					value="{{this.transporter}}"
					name="transporter"
					id="transporter"
					type="text"
					class="validate"
					autocomplete="off"
				/>
				<label class="active" for="transporter">Transporter</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s10">
				<input
					value="{{this.freight}}"
					name="freight"
					id="freight"
					type="number"
					class="validate"
					autocomplete="off"
				/>
