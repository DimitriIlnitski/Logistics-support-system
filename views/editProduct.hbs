<h4>
	<span class="text-darken-2">Редагувати замовлення</span>
</h4>
<div class="row">
	<form
		id="myForm"
		class="col s12"
		action="/products/editHandlingProduct"
		method="post"
	>
		<div class="row">
			<div class="input-field col s10">
				<input
					value="{{this.dispatchDate}}"
					name="dispatchDate"
					id="dispatchDate"
					type="text"
					class="validate"
					autocomplete="off"
				/>
				<label class="active" for="dispatchDate">Dispatch date</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s10">
				<input
					value="{{this.customer}}"
					name="customer"
					id="customer"
					type="text"
					class="validate"
					autocomplete="off"
				/>
				<label class="active" for="customer">Customer</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s10">
				<input
					value="{{this.orderNumber}}"
					name="orderNumber"
					id="orderNumber"
					type="text"
					class="validate"
					autocomplete="off"
				/>
				<label class="active" for="orderNumber">Order</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s10">
				<input
					value="{{this.orderDate}}"
					name="orderDate"
					id="orderDate"
					type="text"
					class="validate"
					autocomplete="off"
				/>
				<label class="active" for="orderDate">Order date</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s10">
				<input
					value="{{this.placeOfDelivery}}"
					name="placeOfDelivery"
					id="placeOfDelivery"
					type="text"
					class="validate"
					autocomplete="off"
				/>
				<label class="active" for="placeOfDelivery">Place of delivery</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s10">
				<input
					value="{{this.nettoWeight}}"
					name="nettoWeight"
					id="nettoWeight"
					type="number"
					class="validate"
					autocomplete="off"
				/>
